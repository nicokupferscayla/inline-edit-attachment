{
  "name": "scayla-companion-app",
  "version": "0.0.1",
  "license": "Proprietary",
  "description": "Inline edit attachments for Scayla",
  "author": "Nico Kupfer <nicolas.kupfer@scayla.com>",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "sass styles/_main.scss styles/main.css && electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "scayla-companion-app",
    "mac": {
      "type": "dmg",
      "category": "com.scayla.inline-edit"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-dl": "^3.0.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "latest",
    "sass": "^1.26.8"
  }
}
